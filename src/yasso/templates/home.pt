<html
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="load: main.pt">
<body>
    <div metal:fill-slot="content">
        <div tal:define="clients user.clients">
            <h1>Welcome, ${user.title}.</h1>
            <div tal:condition="clients">
                <form id="remove-clients" method="post" action="remove-clients">
                    Your account on this system is connected with the following sites.
                    <ul>
                        <li tal:repeat="client clients">
                            <input type="checkbox" name="remove" value="${client.clientid}" />
                            <a href="${client.url}">${client.title}</a>
                        </li>
                    </ul>
                    <input type="submit" name="submit" value="Remove Selected Sites" />
                </form>
            </div>
            <div tal:condition="not clients">
                Your account on this system is not yet connected with any sites.
            </div>
            <a href="logout">Log Out</a>
        </div>
    </div>
</body>
</html>
